{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "indent": [
            true,
            "spaces",
            2
        ],
        "interface-name": [false],
        "max-line-length": [
            true,
            {
                "limit": 120,
                "ignore-pattern": "\"[\\.,;]$|`[\\.,;]$"
            }
        ],
        "no-unused-expression":false,
        "only-arrow-functions": false,
        "quotemark": [true, "double"],
        "semicolon": [
            true,
            "always"
        ],
        "typedef": [
            true,
            "parameter",
            "property-declaration",
            "member-variable-declaration"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ]
    }
}